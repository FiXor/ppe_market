{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}
{% block body %}

    <!-- Page Content -->
    <div class="container">

        <div class="row">


            <div class="col-lg-12">

                <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid"
                                 src="{{ asset('images_drones/wallpaper/image-215843-grande.jpg') }}"
                                 alt="Drone phantoms">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid"
                                 src="{{ asset('images_drones/wallpaper/image-216817-grande.jpg') }}"
                                 alt="Second slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <br>
                <h1 style="font-weight: bold;">Les produits du moment :</h1>
                <div class="row">
                    {% for produit in produits %}

                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <img class="card-img-top" src="{{ produit.chemin }}" alt=""></img>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="{{ path('produit.show', {id: produit.id, slug: produit.libelle|slugify}) }}">{{ produit.libelle }}</a>
                                    </h4>
                                    <div class="text-success"
                                         style="font-weight: bold; font-size: 2rem;">{{ produit.prixht }} â‚¬
                                    </div>
                                    <p class="card-text">Ce produit fait partie de nos meilleures ventes</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                                </div>
                            </div>
                        </div>

                    {% endfor %}
                </div>
                <!-- /.row -->

            </div>
            <!-- /.col-lg-12 -->

        </div>
        <!-- /.row -->

        <div class="col-lg-12">
            <h1 style="font-weight: bold;">Les categories</h1>
            <div class="row">


                {% for categorie in categories %}

                    <div class="card" style="width: 25%;">
                        <img src="{{ categorie.cheminI }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{ categorie.libelle }}</h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk
                                of
                                the card's content.</p>
                            <a href="{{ path('categorie_show_produits', {'id': categorie.id}) }}"
                               class="btn btn-primary">Voir les produits</a>
                        </div>
                    </div>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
                </table>
            </div>
        </div>


    </div>
    <!-- /.container -->





{% endblock %}