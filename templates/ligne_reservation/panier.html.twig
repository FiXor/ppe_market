{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

    <h1>Panier {{ app.user.username }}</h1>

    {% if items | length > 0 %}

        <table class="table">
            <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.produit.libelle }}</td>
                    <td>{{ item.produit.prixht }}</td>
                    <td>{{ item.quantite }}</td>
                    <td>{{ item.produit.prixht|number_format * item.quantite|number_format }}</td>

                    <td>
                        <a href="{{ path('panier_remove', {'id': item.produit.id}) }}" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>

            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3" class="text-right"> Total :</td>
                <td>{{ total }}</td>
                <td></td>
            </tr>
            </tfoot>
        </table>

    {% else %}
    <p> Votre panier est vide</p>
    {% endif %}

{% endblock %}
